<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAppBg</item>
        <item name="colorPrimaryDark">@color/colorAppBg</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorAppBg</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">#FF5722</item>
    </style>

    <style name="coloredbutton"
        parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:colorControlHighlight">#ffffff</item>
    </style>

</resources>
